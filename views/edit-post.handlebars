<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form" id="edit-post-form">
    <div>
      <p>Post Title:</p><input name="post-title" type="text" value="{{post.title}}" />
    </div>
        <div>
      <p>Post Body:</p><input name="post-body" type="text" value="{{post.body}}" />
    </div>
    <div>
      <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn" id="delete-btn">Delete post</button>
    </div>
    
  </form>
</article>



{{> comments post.comments}}

